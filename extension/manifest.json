{
  "manifest_version": 3,
  "name": "rfrnce",
  "version": "1.0.0",
  "description": "Compare products across retail sites with AI-powered reports",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": [
    "https://rfrnce.vercel.app/*",
    "https://www.amazon.com/*",
    "https://www.walmart.com/*",
    "https://www.bestbuy.com/*",
    "https://www.target.com/*",
    "https://www.ebay.com/*",
    "https://www.newegg.com/*",
    "https://www.homedepot.com/*",
    "https://www.lowes.com/*",
    "https://www.etsy.com/*",
    "https://www.wayfair.com/*",
    "https://www.costco.com/*",
    "https://www.aliexpress.us/*",
    "https://www.bhphotovideo.com/*",
    "https://www.nike.com/*",
    "https://www.adidas.com/*",
    "https://www.dickssportinggoods.com/*",
    "https://www.urbanoutfitters.com/*",
    "https://www.depop.com/*",
    "https://www.forever21.com/*",
    "https://www.hollisterco.com/*",
    "https://www.sephora.com/*",
    "https://www.ulta.com/*",
    "https://www.aritzia.com/*",
    "https://www.glossier.com/*",
    "https://www.uniqlo.com/*",
    "https://www.fashionnova.com/*",
    "https://www.elfcosmetics.com/*",
    "https://shop.lululemon.com/*",
    "https://www2.hm.com/*",
    "https://us.brandymelville.com/*",
    "https://www.gap.com/*",
    "https://oldnavy.gap.com/*",
    "https://www.zalando.co.uk/*",
    "https://www.vinted.com/*",
    "https://www.osprey.com/*",
    "https://www.deuter.com/*",
    "https://www.thenorthface.com/*",
    "https://www.carhartt.com/*",
    "https://www.levi.com/*",
    "https://www.pacsun.com/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.walmart.com/*",
        "https://www.bestbuy.com/*",
        "https://www.target.com/*",
        "https://www.ebay.com/*",
        "https://www.newegg.com/*",
        "https://www.homedepot.com/*",
        "https://www.lowes.com/*",
        "https://www.etsy.com/*",
        "https://www.wayfair.com/*",
        "https://www.costco.com/*",
        "https://www.aliexpress.us/*",
        "https://www.bhphotovideo.com/*",
        "https://www.nike.com/*",
        "https://www.adidas.com/*",
        "https://www.dickssportinggoods.com/*",
        "https://www.urbanoutfitters.com/*",
        "https://www.depop.com/*",
        "https://www.forever21.com/*",
        "https://www.hollisterco.com/*",
        "https://www.sephora.com/*",
        "https://www.ulta.com/*",
        "https://www.aritzia.com/*",
        "https://www.glossier.com/*",
        "https://www.uniqlo.com/*",
        "https://www.fashionnova.com/*",
        "https://www.elfcosmetics.com/*",
        "https://shop.lululemon.com/*",
        "https://www2.hm.com/*",
        "https://us.brandymelville.com/*",
        "https://www.gap.com/*",
        "https://oldnavy.gap.com/*",
        "https://www.zalando.co.uk/*",
        "https://www.vinted.com/*",
        "https://www.osprey.com/*",
        "https://www.deuter.com/*",
        "https://www.thenorthface.com/*",
        "https://www.carhartt.com/*",
        "https://www.levi.com/*",
        "https://www.pacsun.com/*"
      ],
      "js": ["src/content/content.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/report/index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
